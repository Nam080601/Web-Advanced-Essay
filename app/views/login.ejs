<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Login</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  </head>
  <body>
    <div class="limiter">
      <div class="container-login">
        <div class="wrap-login">
          <form class="login-form validate-form">
            <span class="login-form-title">ĐĂNG NHẬP</span>

            <div
              class="wrap-input validate-input"
              style="margin-bottom: 16px"
              data-validate="Chưa nhập tài khoản"
            >
              <input
                class="input"
                id="username"
                type="text"
                name="username"
                placeholder="Tài khoản"
              />
              <span class="focus-input"></span>
            </div>

            <div
              class="wrap-input validate-input"
              style="margin-bottom: 16px"
              data-validate="Chưa nhập mật khẩu"
            >
              <input
                class="input"
                id="password"
                type="password"
                name="password"
                placeholder="Mật khẩu"
              />
              <span class="focus-input"></span>
            </div>

            <div class="container-login-form-btn mt-3">
              <button class="login-form-btn" type="submit">Đăng nhập</button>
            </div>

            <div class="signup">
              <span class="txt1" style="margin-bottom: 9px">
                Chưa có tài khoản?
              </span>

              <a href="/register" class="txt3"> Đăng ký ngay </a>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="/js/main.js"></script>
  </body>
</html>
